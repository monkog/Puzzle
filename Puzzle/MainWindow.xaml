<Window x:Class="Puzzle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Puzzle" Height="600" Width="800"
        MinHeight="450" MinWidth="600"
        Icon="/Puzzle;component/Images/icon.ico" WindowStartupLocation="CenterScreen">
	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Width" Value="75"/>
			<Setter Property="Height" Value="30"/>
		</Style>
		<Style TargetType="ListView">
			<Setter Property="Margin" Value="20"/>
		</Style>
		<Style TargetType="RadioButton">
			<Setter Property="Margin" Value="0,4"/>
		</Style>
	</Window.Resources>
	<Grid>
		<TabControl>
			<TabItem Header="Game">
				<Grid Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition Width="Auto"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<Rectangle Grid.Row="0" Grid.Column="0" Name="rectangle" Fill="#FF9EBDDE" Margin="20"/>
					<Canvas Grid.Row="0" Grid.Column="0" Name="image" x:FieldModifier="public" Margin="20"/>

					<Grid Grid.Row="0" Grid.Column="1" Margin="0,15,20,0">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="Auto"/>
						</Grid.RowDefinitions>

						<Button Grid.Row="0" Name ="startButton" Content="Start Game" Click="startButton_Click" x:FieldModifier="public"/>
						<Button Grid.Row="1" Name="pauseButton" Content="Pause" IsEnabled="False" Click="pauseButton_Click" x:FieldModifier="public"/>

						<GroupBox Grid.Row="2" Header="Puzzle size" Margin="0,10">
							<StackPanel>
								<RadioButton Name="hardRadio"  GroupName="PuzzleSize" Content="Hard" IsChecked="True"/>
								<RadioButton Name="mediumRadio" GroupName="PuzzleSize" Content="Medium"/>
								<RadioButton Name="easyRadio" GroupName="PuzzleSize" Content="Easy"/>
							</StackPanel>
						</GroupBox>

					</Grid>

					<StatusBar Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Height="25"/>
					<Label Grid.Column="1" Grid.Row="1" Name="timerLabel" Width="100" HorizontalAlignment="Right" Visibility="Hidden" x:FieldModifier="public"/>

					<Image Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Name="pauseImage" Source="/Puzzle;component/Images/pause.png" Opacity="0.8" Stretch="Fill" MouseDown="pauseImage_MouseDown" Visibility="Hidden"/>
				</Grid>
			</TabItem>
			<TabItem Header="HighScores">
				<Grid>
					<Grid.Resources>
						<Style TargetType="Label">
							<Setter Property="FontSize" Value="20"/>
							<Setter Property="FontWeight" Value="Bold"/>
							<Setter Property="FontFamily" Value="Arial"/>
							<Setter Property="HorizontalAlignment" Value="Center"/>
							<Setter Property="VerticalAlignment" Value="Bottom"/>
						</Style>
					</Grid.Resources>
					<Grid.ColumnDefinitions>
						<ColumnDefinition/>
						<ColumnDefinition/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="70"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<Grid.Background>
						<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
							<GradientStop Color="#FF007AFE" Offset="0"/>
							<GradientStop Color="#FF046300" Offset="1"/>
						</LinearGradientBrush>
					</Grid.Background>
					<Label Grid.Column="0" Grid.Row="0" Content="Easy"/>
					<ListView Name="easyListView" Grid.Column="0" Grid.Row="1" ItemsSource="{Binding easyList}">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="Name"  DisplayMemberBinding="{Binding name}"/>
								<GridViewColumn Header="Count" DisplayMemberBinding="{Binding counter}"/>
								<GridViewColumn Header="Time (s)" DisplayMemberBinding="{Binding time}"/>
							</GridView>
						</ListView.View>
					</ListView>
					<Label Grid.Column="1" Grid.Row="0" Content="Medium"/>
					<ListView Name="mediumListView" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding mediumList}">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}"/>
								<GridViewColumn Header="Count" DisplayMemberBinding="{Binding counter}"/>
								<GridViewColumn Header="Time (s)" DisplayMemberBinding="{Binding time}"/>
							</GridView>
						</ListView.View>
					</ListView>
					<Label Grid.Column="2" Grid.Row="0" Content="Hard"/>
					<ListView Name="hardListView" Grid.Column="2" Grid.Row="1" ItemsSource="{Binding hardList}">
						<ListView.View>
							<GridView>
								<GridViewColumn Header="Name" DisplayMemberBinding="{Binding name}"/>
								<GridViewColumn Header="Count" DisplayMemberBinding="{Binding counter}"/>
								<GridViewColumn Header="Time (s)" DisplayMemberBinding="{Binding time}"/>
							</GridView>
						</ListView.View>
					</ListView>
				</Grid>
			</TabItem>
		</TabControl>

	</Grid>
</Window>
